TUP_ROOT = $(TUP_CWD)

CXX = clang++
LD = clang++

CXXFLAGS += -stdlib=libc++ -std=c++0x -pedantic
CXXFLAGS += -fno-rtti -fno-exceptions
CXXFLAGS += -Wall -Wextra -Werror
CXXFLAGS += -Wno-unused-parameter
CXXFLAGS += -arch x86_64

LDFLAGS += -stdlib=libc++

!cxx = |> $(CXX) $(CXXFLAGS) -c %f -o %o |> %B.o
!ld = |> $(LD) $(LDFLAGS) %f -o %o |> %B.bin
!ar = |> ar -crs %o %f |>
!lex = |> lex %f |>
